<Page x:Class="SEPubViewer.Views.SearchByTicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEPubViewer.Views"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
      xmlns:vm="clr-namespace:SEPubViewer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchByTicker">
    <Page.DataContext>
        <vm:SearchByTickerViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="186" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                <Label Margin="0,0,83,23" FontSize="12">Ticker or CIK:</Label>
                <TextBox HorizontalAlignment="Left" Height="23"
                 TextWrapping="Wrap" Text="{Binding Ticker}" VerticalAlignment="Top" Width="78" Margin="96,0,0,0"/>
                <Button Margin="96,25,0,0" Name="btnGetFilings">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click" SourceName="btnGetFilings">
                            <ei:CallMethodAction TargetObject="{Binding}" MethodName="GetFilings" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    Get Filings
                </Button>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Grid.Column="0" Margin="5">
            <ListBox Name="listBoxTopLevelTickers" ItemsSource="{Binding Filings}"
                     DisplayMemberPath="DisplayEssentials" SelectedItem="{Binding SelectedFiling}"
                     Margin="0,25,0,148">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged" 
                                    SourceName="listBoxTopLevelTickers">
                        <ei:CallMethodAction TargetObject="{Binding}" MethodName="GetDocsInReport" />

                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
            <ListBox Name="listBoxDocsInReport" ItemsSource="{Binding DocLinks}"
                     SelectedItem="{Binding SelectedDoc}"
                     DisplayMemberPath="DocumentTitle" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Height="117"
                     Margin="0" Width="176"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                       TextAlignment="Center" FontSize="18"
                       Text="Filings" VerticalAlignment="Top" Height="26" Width="176"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                TextAlignment="Center" FontSize="18"
                Text="Docs In Selected" VerticalAlignment="Bottom" Height="26" Width="176" Margin="0,0,0,117"/>
        </Grid>
    </Grid>
</Page>
