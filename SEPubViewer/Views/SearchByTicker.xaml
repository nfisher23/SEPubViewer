<Page x:Class="SEPubViewer.Views.SearchByTicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SEPubViewer.Views"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
      xmlns:vm="clr-namespace:SEPubViewer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{StaticResource appBackground}"
      Title="SearchByTicker">
    <Page.DataContext>
        <vm:SearchByTickerViewModel />
    </Page.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="186" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource borderRounded}">
            <Grid Grid.Row="0" Grid.Column="0" Margin="8">
                <Label Margin="0,0,83,23" FontSize="12">Ticker or CIK:</Label>
                <TextBox HorizontalAlignment="Left" Height="23"
                 TextWrapping="Wrap" Text="{Binding Ticker}" VerticalAlignment="Top" Width="78" Margin="89,0,0,0"/>
                <Button Margin="89,25,5,0" Name="btnGetFilings">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click" SourceName="btnGetFilings">
                            <ei:CallMethodAction TargetObject="{Binding}" MethodName="GetFilings" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    Get Filings
                </Button>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
            <ListBox Name="listBoxTopLevelTickers" ItemsSource="{Binding Filings}"
                     DisplayMemberPath="DisplayEssentials" SelectedItem="{Binding SelectedFiling}"
                     Margin="8,25,8,148" Style="{StaticResource listBoxStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged" 
                                    SourceName="listBoxTopLevelTickers">
                        <ei:CallMethodAction TargetObject="{Binding}" MethodName="GetDocsInReport" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
            <Border Style="{StaticResource borderRounded}" Margin="-3,-3,-3,0">

                <ListBox Name="listBoxDocsInReport" ItemsSource="{Binding DocLinks}"
                     SelectedItem="{Binding SelectedDoc,Mode=TwoWay}"
                     DisplayMemberPath="Description" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                     Height="111" Style="{StaticResource listBoxStyle}"
                     Margin="8,0,0,8" Width="172">
                </ListBox>
            </Border>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                       TextAlignment="Center"  Style="{StaticResource textBlockStyle}"
                       Text="Filings" VerticalAlignment="Top" Height="26" Width="176"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                TextAlignment="Center" Style="{StaticResource textBlockStyle}"
                Text="Docs" VerticalAlignment="Bottom" Height="26" Width="176" Margin="2,0,0,117"/>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="1">
            <ComboBox Style="{StaticResource comboBoxStyle}" Margin="540,28.5,0,10">
                
            </ComboBox>
        </Grid>
        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource borderRounded}"
                Margin="5,5,0,0">
        <Frame Grid.Column="1" Grid.Row="1" Source="{Binding SelectedDoc.FileLink,Mode=TwoWay}"
               Margin="7">

        </Frame>
        </Border>
    </Grid>
</Page>
